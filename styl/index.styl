@import "ui/reset"
@import "ui/box-sizing-border-box-all"
@import "ui/body-typography"
@import "ui/responsive-helpers"
@import "ui/subtle-text"
@import "ui/hr"
@import "ui/h1-h6"
@import "ui/markdown"
@import "ui/font-smoothing"
@import "ui/media-query-variables"
@import "ui/link-underlines"
@import "ui/colors"
@import "ui/fonts"
@import "ui/icons"
@import "ui/more-links-and-buttons"
@import "ui/logo"

backgroundColor = #20150f
contentColor = #c3c3b7
goldColor = #e8cc72

body
  font-family Avenir, sans-serif

::-webkit-scrollbar
  background transparent
  border 0
  height 10px
  width 10px

::-webkit-scrollbar-thumb
  background rgba(#fff, .1)
  transition background .35s ease

::-webkit-scrollbar-thumb:hover
  background rgba(#fff, .2)

::-webkit-scrollbar-thumb:active
  background goldColor

html
  antialiasedFonts()
  background backgroundColor
  color contentColor

.sidebar
  background #141414

h1, h2, h3, h4, h5, h6
  color #f7f6e7

a
  color #ed82bf
  text-decoration none

.hero-stripe
  background #c5aa8f
  background-image linear-gradient(135deg, #c5aa8f, #8e4b7b)
  margin-bottom 5em
  padding-top 15vh
  padding-bottom 15vh

  .hero
    position relative
    max-width 50em
    padding-left 2em
    padding-right 2em
    margin-left auto
    margin-right auto

    .stout-logo-container
      width 220.797px
      max-width 14em
      margin-left auto
      margin-right auto

    p
      text-align center
      margin-top 3em
      margin-bottom 0

      a
        font-size 1.25em
        color rgba(#5a173f, .55)

        @media (max-width: 35em)
          display block

        &:hover
          color #ffdfb0

    h1
      opacity .0001
      height 0
      overflow hidden
      padding 0
      margin 0

    h2
      font-size 1.6em
      line-height 1.4em
      text-align center
      color #ffdfb0
      font-weight 300
      letter-spacing .01em
      margin-bottom 0
      text-indent @letter-spacing

      &:before
        content ""
        display block
        height 1px
        width 3em
        margin 1.5em auto 1em
        background-color rgba(#000, .1)

.stout-logo
  position relative
  //transform perspective(880px) rotateX(-36deg) translateZ(-16em) scaleY(1.5) translateY(8em)
  padding-bottom 100%
  height 0

  .stout-logo-stage
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

  .stout-logo-resizer
    position absolute
    top -50%
    left -50%
    right -50%
    bottom -50%

  .stout-logo-beer
    position absolute
    top 27%
    left 0
    width 100%
    height 100%

    .stout-body-bottom
      position absolute
      width 25%
      height 10%
      top 35%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-color #1e150e
      background-image linear-gradient(90deg, #7b462b 0%, #4c2e1f 5%, #2f180b, #000 80%, #2f180b, #4c2e1f 95%, #7b462b 100%)
      border-radius 50%
      box-shadow 0 0 4px #20150f, 0 0 18px rgba(#20150f, .7)

    .stout-body-bottom-cover
      position absolute
      width 25%
      height 10%
      top 35%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-image linear-gradient(180deg, rgba(#000, 0), rgba(#000, 0) 49.99999%, rgba(#000, .67) 49.99999%, rgba(#000, .95))
      border-radius 50%

    .stout-body-bottom-cover-foam
      position absolute
      width 25%
      height 10%
      top 35%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-image url("data:image/png;base64,")
      opacity .3
      border-radius 50%
      background-position 0% 99%
      background-repeat repeat-x
      background-size 50px 50%

    .stout-body
      position absolute
      width 25%
      height 35%
      top 5%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-color #1e150e
      background-image linear-gradient(90deg, #7b462b 0%, #4c2e1f 5%, #2f180b, #000 80%, #2f180b, #4c2e1f 95%, #7b462b 100%)

    .stout-body-cover-top
      position absolute
      width 25%
      height 25%
      top 5%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-image linear-gradient(rgba(#000, .9), rgba(#000, .25))

    .stout-body-cover-bottom
      position absolute
      width 25%
      height 10%
      top 30%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-image linear-gradient(rgba(#000, .25), rgba(#000, .6))

    .stout-body-cover-foam
      position absolute
      width 25%
      height 35%
      top 5%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-image url("data:image/png;base64,")
      opacity .5

    .head-foam-bottom
      position absolute
      width 25%
      height 10%
      top 5%
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-color #e2e0ca
      background-image url("data:image/png;base64,"), linear-gradient(90deg, #ffd598, #e79f38 80%, #ffd598)
      border-radius 50%

    .head-foam
      position absolute
      background-color #e2e0ca
      background-image linear-gradient(90deg, #fee2ba, #956139 80%, #fee2ba)
      background-image url("data:image/png;base64,"), linear-gradient(90deg, #ffd598, #e79f38 80%, #ffd598)
      width 25%
      top 5.001%
      height 5%
      left 0
      right 0
      margin-left auto
      margin-right auto

    .head-foam-top
      position absolute
      width 25%
      height 10%
      top 0
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-color lighten(#ffd598, 20%)
      border-radius 50%

    .head-foam-top-cover
      position absolute
      width 25%
      height 10%
      top 0
      left 0
      right 0
      margin-left auto
      margin-right auto
      background-image url("data:image/png;base64,")
      border-radius 50%
      opacity .7

.content
  max-width 32em
  padding-left 1em
  padding-right 1em
  margin-left auto
  margin-right auto
  font-size 1.25em
  font-weight 300
  line-height 1.3em

  @media iPhoneMaxWidthQuery
    &, *
      word-wrap break-word

  a:not(.without-underline)
    linkUnderlines backgroundColor, #ed82bf

  ol, ul
    list-style none
    list-style-image none
    padding-left 0
    padding-right 0

    > li
      margin-left 1.3636em
      margin-bottom .545454em
      padding-top .125em

      &:before
        position absolute
        display inline-block
        width 2.3636em
        margin-left -2.3636em
        text-align right
        padding-right .545454em

  ol
    counter-reset post

    > li:before
      counter-increment post
      content counter(post) "."

  ul > li:before
    content "â€¢"
    transform scale(.8)

  img
    max-width 100%

  hr
    width 20em
    max-width 75%
    margin-left auto
    margin-right auto
    margin-top 2em
    margin-bottom 2em

  sup
    vertical-align baseline
    position relative
    top -.5em
    font-size .85em

  sub
    vertical-align baseline
    position relative
    bottom -.5em
    font-size .85em

  h2, h3, h4, h5, h6
    line-height 1.2em
    margin-bottom .125em

  h2
    font-size 1.5em
    margin-top 1.75em

  h3
    font-size 1.225em

  h4, h5, h6
    font-size 1.1em

  h3, h4, h5, h6
    margin-top 2em

  h5, h6
    text-transform uppercase
    letter-spacing .06em
    padding-bottom .25em
    margin-bottom .5em
    border-bottom .0625em solid rgba(#fff, .06)

  h5
    font-size .94em
    color #707070

    > code
      color goldColor

      &:first-child
        padding-left 0

  h2, h3, h4, h5, h6

    & + *
      margin-top 0

  > h2
    text-align center
    margin-bottom .5em

    &:before
      content ""
      display block
      width 2.333em
      height 1px
      margin-left auto
      margin-right auto
      background rgba(#fff, .3)
      margin-top 3em
      margin-bottom 1em

    &:nth-of-type(1):before
      display none

  code, pre
    font-family Monaco, "Bitstream Vera Sans Mono", "Lucida Console", Terminal, monospace

  pre
    max-width 100%
    margin 1em auto
    padding 1.125em 1.375em
    background-color rgba(#fff, .05)
    color goldColor
    overflow-x auto
    -webkit-overflow-scrolling touch
    font-size .76em
    line-height 1.52em
    white-space pre
    word-wrap normal

    &::-webkit-scrollbar
      background transparent
      border 0
      height 5px
      width 5px

    &::-webkit-scrollbar-thumb
      background rgba(#fff, .1)
      transition background .35s ease

    &::-webkit-scrollbar-thumb:hover
      background rgba(#fff, .2)

    &::-webkit-scrollbar-thumb:active
      background #e8cc72

  code
    font-size .76em
    padding .15625em .3125em
    white-space nowrap
    font-style normal

    @media iPhoneMaxWidthQuery
      white-space normal

  pre > code
    font-size inherit
    background transparent
    padding 0
    white-space inherit

    @media iPhoneMaxWidthQuery
      white-space inherit

  em > em
    font-style normal

  p > code, li > code
    position relative
    color goldColor
    font-size 0.7em
    top -.0625em
    padding .1em

.footer
  font-size 1.3em
  text-align center
  padding-left 1em
  padding-right 1em
  margin-top 4em
  margin-bottom 5em

  span
    display block
    font-size .7em
    text-transform uppercase
    letter-spacing .1em
    text-indent @letter-spacing
    margin-bottom 1em
    opacity .5

  .logo-link
    font-size .5em
